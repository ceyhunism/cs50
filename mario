#include <iostream>

using namespace std;

int main(int argc, char** argv) {
	
	int n;
	
	do
	{
		cout << "Enter n: ";
		cin >> n;
	}
	while(n < 0 || n > 23);
  
  
	
	for(int i = 0; i < n; i++)
	{
		for(int j = 0; j < n - i - 1; j++)
		{
			cout << " ";
		}
		
		for(int k = 0; k < i + 2; k++)
		{
			cout << "#";	
		}
		cout << endl;
	}
	
	
	/*
	// case for n = 4
	
	for(int j = 0; j < n - 1; j++)
	{
		cout << " ";
	}
	cout << "##" << endl;
	
	for(int j = 0; j < n - 2; j++)
	{
		cout << " ";
	}
	cout << "###" << endl;
	
	for(int j = 0; j < n - 3; j++)
	{
		cout << " ";
	}
	cout << "####" << endl;
	
	for(int j = 0; j < n - 4; j++)
	{
		cout << " ";
	}
	cout << "#####" << endl;
	*/
	
	
	
	return 0;
}
