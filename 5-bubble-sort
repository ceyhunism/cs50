/*
Bubble sort
*/
#include <iostream>

using namespace std;


int main() 
{
	int size;
	cout << "Vvedite razmer massiva: ";
	cin >> size;
	
	//obyavleniye massiva
	int *array;
	array = new int [size];
	
	
	//vvod elementov massiva
	cout << "Vvedite " << size << " elementov massiva: ";
	for(int i = 0; i < size; i++)
	{
		cin >> array[i];		
	}
	
	
	
	for(int i = 0; i < size - 1; i++)
	{
		for(int j = 0; j < size - i - 1; j++)
		{
			if(array[j] > array[j+1])
			{
				int temp = array[j];
				array[j] = array[j+1];
				array[j+1] = temp;
			}
		}
	}
	
	
	
	//vivod elementov massiva v console
	for(int i=0; i < size; i++)
	{
		cout << array[i] << " ";		
	}
	
	//ocistka pamati
	delete [] array;
	
	
	return 0;
}
