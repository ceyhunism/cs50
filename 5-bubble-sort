/*
Bubble sort
*/
#include <iostream>

using namespace std;

int main() 
{
	int size;
	cout << "Enter size of array: ";
	cin >> size;
	
	// array init
	int *array;
	array = new int [size]; // dynamic array
	
	
	//input array elements
	cout << "Enter " << size << " elements of array: ";
	for(int i = 0; i < size; i++)
	{
		cin >> array[i];		
	}
	
	
	// bubble sort
	
	for(int i = 0; i < size - 1; i++)
	{
		for(int j = 0; j < size - i - 1; j++)
		{
			if(array[j] > array[j+1]) // swipe
			{
				int temp = array[j];
				array[j] = array[j+1];
				array[j+1] = temp;
			}
		}
	}
	
	
	
	cout << "Sorted array: ";
	// output sorted array
	for(int i=0; i < size; i++)
	{
		cout << array[i] << " ";		
	}
	
	//clean memory
	delete [] array;
	
	
	return 0;
}
